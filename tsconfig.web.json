{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": [
    "src/renderer/src/env.d.ts",
    "src/renderer/src/**/*",
    "src/renderer/src/**/*.vue",
    "src/preload/*.d.ts",
    "src/shared/**/*",
     "auto-imports.d.ts",
     "components.d.ts"
  ],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/renderer/src/*"],
      "@renderer/*": [
        "src/renderer/src/*"
      ],
       "#build/ui/*": [
        "./node_modules/.nuxt-ui/ui/*"
      ],
      "@shared/*": ["src/shared/*"],
      "~/*": ["./*"]
    }
  }
}
